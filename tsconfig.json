{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"]
  },
  "include": ["src/**/*", "src/api/**/*", "src/types/*.ts"],
  "exclude": ["node_modules"],
  "jsx": "react-jsx",
  "jsxImportSource": "hono/jsx"
}
